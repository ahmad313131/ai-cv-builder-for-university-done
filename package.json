{
  "name": "ai-cv-builder",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.4",
    "@mui/lab": "^7.0.1-beta.18",
    "@mui/material": "^7.3.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "6.26.2",
    "react-router-dom": "6.26.2",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:ci": "react-scripts test --watchAll=false --coverage --runInBand"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "jest": "^27.5.1"
  },
  
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/__tests__/(home|login|mycvs|user-menu|app-.*|header-.*|personal-info-step|private-route|useCvForm)\\.test\\.js$",
      "<rootDir>/src/__tests__/wip/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/api.js",
      "src/theme.js",
      "src/hooks/useThemeMode.js",
      "src/components/AnalysisCard.jsx",
      "src/components/ScoreBar.jsx",
      "src/components/ScoreCircle.jsx",
      "src/components/ThemeToggle.jsx"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 50,
        "branches": 50,
        "functions": 50,
        "lines": 50
      }
    }
  }
 


}
